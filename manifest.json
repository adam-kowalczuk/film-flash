{
  "manifest_version": 2,
  "name": "Film Flash",
  "description": "Generates a random movie background image, title, and description when user opens a new browser tab.",
  "version": "0.0.0.1",
  "author": "Adam Kowalczuk",
  "browser_action": {
    "default_icon": { "16": "icon16.png", "32": "icon32.png" },
    "default_title": "Movies! Movies! Movies!"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "chrome_url_overrides": { "newtab": "newtab.html" },
  "permissions": ["activeTab"]
}
